extends layout

block content
  h1= title
  p Welcome!
  div.loginbox
    p #{errorMessage}
    form(name="login", action="/login", method="post")
      div(data-role='fieldcontain')
        label(for='username') username
           input(id='username',type='text',value='',placeholder='username',name='username')
      div#passworddiv(data-role='fieldcontain')
        label(for='password') password
           input(id='password',type='password',value='',placeholder='',name='password')
      div(data-role='fieldcontain')   
      input(type='submit',value='Login',data-transition='fade', data-theme='c')